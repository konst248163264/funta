<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/component_rooms__chip_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/component_rooms__studio_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/studio_text"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/component_rooms__one_room_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="@string/one_room_text"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/component_rooms__two_room_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="@string/two_room_text"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/component_rooms__three_room_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="@string/three_room_text"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/component_rooms__four_room_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="@string/four_room_text"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />

        <com.google.android.material.chip.Chip
            android:id="@+id/component_rooms__five_room_chip"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:checkable="true"
            android:text="@string/five_plus_room_text"
            android:textAlignment="center"
            android:theme="@style/Theme.MaterialComponents.Light" />
    </com.google.android.material.chip.ChipGroup>


</androidx.constraintlayout.widget.ConstraintLayout>