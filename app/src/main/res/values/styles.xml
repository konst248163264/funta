<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="App.Headers.Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">27sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">"sans-serif-light"</item>
    </style>

    <style name="App.Text.Style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">"sans-serif-light"</item>
    </style>

    <style name="App.Choose.Yourself.Button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#18ccd4</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.Buttons.Style" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">#18ccd4</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.Button.External.Accounts.Style" parent="Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">#fafafa</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="App.Button.Edit" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:background">@drawable/edit_rounded_bg</item>
        <item name="android:strokeColor">#18ccd4</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#18ccd4</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="userAvatar">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="icon">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="metroCircle">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
    </style>
</resources>